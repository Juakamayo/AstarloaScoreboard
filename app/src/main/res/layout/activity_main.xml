<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_dark">


    <LinearLayout
        android:id="@+id/layoutWeapons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="ASTARLOA"
            android:textColor="@color/orange"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSable"
            android:text="SABLE"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_orange"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnFloreteEspada"
            android:text="FLORETE / ESPADA"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_orange"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMode"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:text="SABLE"
            android:textColor="@color/orange"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnMarcador"
            android:text="MARCADOR"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_orange"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnControl"
            android:text="CONTROL"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_orange"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnAtras"
            android:text="ATRAS"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_red"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutModeFloreteEspada"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:text="FLORETE / ESPADA"
            android:textColor="@color/orange"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnMarcadorFloreteEspada"
            android:text="MARCADOR"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_orange"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"/>



        <Button
            android:id="@+id/btnControlFloreteEspada"
            android:text="CONTROL"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_orange"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnAtrasFloreteEspada"
            android:text="ATRAS"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_red"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnAbout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="64dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_info"
        android:contentDescription="Acerca de"
        android:padding="12dp"
        app:tint="#80FFFFFF" />

</FrameLayout>


